{
  "name": "PixelHeart",
  "version": "1.0.0",
  "description": "A basic WebGL app with TypeScript and React",
  "main": "index.js",
  "scripts": {
    "build": "esbuild ./src/index.tsx --bundle --minify --platform=browser --outfile=www/js/index.js --define:process.env.NODE_ENV='\"production\"' --sourcemap",
    "dev": "npm run clean && esbuild ./src/index.tsx --outdir=www/js --servedir=www --bundle --define:process.env.NODE_ENV='\"development\"'",
    "clean": "rimraf www/js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "esbuild": "^0.12.15",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "rimraf": "^5.0.1"
  }
}
